<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/style.css">
</head>
<body>
    <%- include("../partials/admin/header.ejs");  %>
    <section id="adcontent">
        <div class="container">
            <div class="row">
                <%- include("../partials/admin/left.ejs"); %> 
                <div class="col-md-9 mt-3">
                    <form action="/admin/search/" method="post">
                        <div>
                            <select name="search" class="form-select mb-3">
                                <option value="read">read</option>
                                <option value="unread">unread</option>
                            </select>
                            <button type="submit" class="form-control btn btn-primary mb-3">Search</button>
                        </div>
                    </form>
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>S No.</th>
                                <th>Email</th>
                                <th>Query</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <% contactDetails.forEach((results, key) => {  %>
                            <tbody>
                                <tr>
                                    <td><%=key+=1%></td>
                                    <td><%=results.email%></td>
                                    <td><%=results.query%></td>
                                    <td>
                                        <a href="/admin/contactstatusupdate/<%=results.id%>">
                                            <button class="btn btn-success"><%=results.status%></button>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/contactdelete/<%=results.id%>">
                                        <button class="btn btn-success">Delete</button></a>
                                    </td>
                                </tr>
                            </tbody>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include("../partials/admin/footer.ejs"); %>
</body>
</html>