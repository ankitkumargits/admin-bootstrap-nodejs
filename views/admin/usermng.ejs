<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/style.css">
</head>
<body>
    <%- include("../partials/admin/header.ejs");  %>

    <section id="adcontent">
        <div class="container">
            <div class="row">
                <%- include("../partials/admin/left.ejs"); %> 
                <div class="col-md-9">
                    <div class="text-center">
                        <h2>Users Management</h2>
                    </div>
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr class="text-center">
                                <th>Username</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% userData.forEach((results) => { %>
                            <tr class="text-center">
                                <td><%=results.username%></td>
                                <td>
                                    <a href="/admin/userstatusupdate/<%=results.id%>"><button class="btn btn-primary"><%=results.status%></button></a>
                                </td>
                                <td><a href="/admin/userroleupdate/<%=results.id%>"><button class="btn btn-primary"><%=results.role%></button></a></td>
                                <td>
                                    <a href="/admin/userdelete/<%=results.id%>">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include("../partials/admin/footer.ejs"); %>
</body>
</html>